<Page x:ConnectionId='1'
    x:Class="TomatoTimer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TomatoTimer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="634.978"
    >

    <Grid  Background="{ThemeResource SystemControlAccentAcrylicWindowAccentMediumHighBrush}">

        <TextBlock x:ConnectionId='2' HorizontalAlignment="Center" Style="{StaticResource HeaderTextBlockStyle}" Margin="0,128,0,0" Text="Fluent Timer" TextWrapping="Wrap" VerticalAlignment="Top" Height="132"                                               RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" >
            <TextBlock.RenderTransform>
                <CompositeTransform SkewY="-0.18" TranslateY="-0.723"/>
            </TextBlock.RenderTransform>
        </TextBlock>

        
        <ListBox x:ConnectionId='3' x:Name="MyListBox"                                HorizontalAlignment="Center" Margin="0,363,0,0" VerticalAlignment="Top"  Height="38" Width="242" Background="#FF81B1C2"                                             >

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>


        <TimePicker x:ConnectionId='4' Name="cicleTime" FontSize="15" FontWeight="SemiBold" ClockIdentifier="24HourClock"                                                      Header="Durata ciclo" HorizontalAlignment="Center" Margin="0,429,0,0" VerticalAlignment="Top" />
        <TimePicker x:ConnectionId='5' Name="pauseTime"                                                      FontSize="15" FontWeight="SemiBold" ClockIdentifier="24HourClock"  Header="Durata pausa" HorizontalAlignment="Center" Margin="0,523,0,0" VerticalAlignment="Top" />


        <Button x:ConnectionId='6'  CornerRadius="1000"  Style="{StaticResource ButtonRevealStyle}" HorizontalAlignment="Center" FontSize="48" Margin="0,744,0,0" VerticalAlignment="Top" Height="123" Width="123"                     >
            <SymbolIcon   Symbol="Play" HorizontalAlignment="Stretch" Height="20" Margin="0,0,0,0" VerticalAlignment="Top"/>
        </Button>
        <TextBlock FontSize="15" FontWeight="SemiBold" Text="Cicli di studio" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="197,338,0,0" VerticalAlignment="Top"/>

        <ContentDialog x:ConnectionId='7' x:Name="emptyFieldsDialog"
          
           CloseButtonText="Chiudi" Background="{ThemeResource SystemControlBaseMediumLowAcrylicElementMediumBrush }">
            <ContentDialog.TitleTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Alcuni campi sono vuoti"/>
                    </StackPanel>
                </DataTemplate>
            </ContentDialog.TitleTemplate>
            
        </ContentDialog>
        <!--/
        <NavigationView x:Name="nvSample">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Play" Content="Menu Item1" Tag="SamplePage1" />
                <NavigationViewItem Icon="Save" Content="Menu Item2" Tag="SamplePage2" />
                <NavigationViewItem Icon="Refresh" Content="Menu Item3" Tag="SamplePage3" />
                <NavigationViewItem Icon="Download" Content="Menu Item4" Tag="SamplePage4" />
            </NavigationView.MenuItems>
            <Frame x:Name="contentFrame"/>
        </NavigationView>
/>-->


    </Grid>
</Page>

